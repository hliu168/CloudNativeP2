pipeline {
    agent any
    options { 
        timestamps()
        ansiColor('xterm')
        disableConcurrentBuilds()
        skipDefaultCheckout(true)
    }
    stages {
        stage('Prepare Build Env') {
            steps {
                script {
                    echo "${BUILD_NUMBER}"
                    echo "${VERSION}"
                    cleanWs()
                    deleteDir()
                    checkout scm
                }
            }
        }
    }
}
